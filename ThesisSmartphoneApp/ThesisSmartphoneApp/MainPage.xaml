<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ThesisSmartphoneApp"
             x:Class="ThesisSmartphoneApp.MainPage"
             xmlns:ViewModels="clr-namespace:ThesisSmartphoneApp.ViewModels" >

    <!-- Setting context of page to a view model -->
    <ContentPage.BindingContext>
        <ViewModels:CalculatingPrimes />
    </ContentPage.BindingContext>

    <StackLayout>
        <!-- Place new controls here -->
        <Label HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               FontSize="Large"
               Text="{Binding LargestPrime, Mode=OneWay}" />

        <Entry HorizontalTextAlignment="Center"
               Text="{Binding Number}" />


        <Button Text="Calculate Prime"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Command="{Binding CalculateLargestPrimeCommand}" />
        
    </StackLayout>

</ContentPage>
